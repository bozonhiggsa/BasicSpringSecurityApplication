<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE logback>
<configuration>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%.-19date %level %logger{1}%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework">
        <level value="info"/>
    </logger>

    <logger name="org.hibernate">
        <level value="info"/>
    </logger>

    <logger name="com.springSecurity.springSecurityApp">
        <level value="debug"/>
    </logger>

    <root>
        <level value="warn"/>
        <appender-ref ref="console"/>
    </root>

</configuration>
